{
  "manifest_version": 3,
  "name": "Google Meets Emojis",
  "version": "1.0",
  "description": "React emojis easily in Google Meets.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
